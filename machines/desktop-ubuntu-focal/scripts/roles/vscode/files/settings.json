    // === langage ===
    "javascript.implicitProjectConfig.checkJs": true,
    "javascript.validate.enable": true,
    "javascript.suggest.completeFunctionCalls": true,
    "javascript.updateImportsOnFileMove.enabled": "always",

    "typescript.reportStyleChecksAsWarnings": false, // false for error ?
    "typescript.suggest.completeFunctionCalls": true,
    "typescript.tsserver.maxTsServerMemory": 2048,

    "php.suggest.basic": false, // PHP IntelliSense

    "[markdown]": {
        "editor.quickSuggestions": true
    },
    "[javascript]": {
        "editor.codeActionsOnSave": {}
    },
    "[typescript]": {
        "editor.codeActionsOnSave": {
            "source.fixAll.tslint": true
        },
    },
    "[php]": {
        "editor.codeActionsOnSave": {}
    },

    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.mypyEnabled": true,

    // === extension ===

    "auto-close-tag.activationOnLanguage": [
        "html",
        "xml",
        "javascript",
        "javascriptreact",
        "typescriptreact"
    ],

    "chronicler.ffmpeg-binary": "/usr/bin/ffmpeg",

    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.hovers.enabled": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.views.repositories.files.layout": "tree",
    "gitlens.views.lineHistory.enabled": false,
    "gitlens.views.search.enabled": false,
    "gitlens.mode.statusBar.alignment": "left",
    "gitlens.advanced.messages": {
        "suppressLineUncommittedWarning": true
    },
    "gitlens.advanced.telemetry.enabled": false,
    "gitlens.views.fileHistory.location": "scm",

    "emmet.showExpandedAbbreviation": "inMarkupAndStylesheetFilesOnly",

    "eslint.run": "onSave",

    "macros": {
        "comment": [
            "editor.action.commentLine",
            "cursorDown"
        ],
        "debugStop": [
            "workbench.action.debug.stop",
            "workbench.debug.viewlet.action.removeAllBreakpoints"
        ]
    },

    "material-icon-theme.hidesExplorerArrows": true,
    "material-icon-theme.showReloadMessage": false,
    "material-icon-theme.showUpdateMessage": false,

    "phpcs.standard": "PSR2",

    "surround.custom": {
        "log": {
            "label": "log",
            "description": "console.log",
            "disabled": false,
            "snippet": "console.log($TM_SELECTED_TEXT)"
        }
    },

    "tslint.alwaysShowRuleFailuresAsWarnings": false,
    "tslint.suppressWhileTypeErrorsPresent": true
}
