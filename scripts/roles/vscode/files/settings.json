{
    // breadcrumbs
    "breadcrumbs.enabled": true,
    // debug
    "debug.openDebug": "openOnSessionStart",
    "debug.openExplorerOnEnd": true,
    // editor
    // editor scroll
    "editor.smoothScrolling": true,
    "editor.fastScrollSensitivity": 10,
    "editor.mouseWheelScrollSensitivity": 3,
    // editor font
    "editor.fontFamily": "'DejaVu Sans Mono', 'Droid Sans Mono'",
    "editor.fontSize": 14.5,
    "editor.lineHeight": 22,
    // editor format
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "modifications",
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    // editor completion
    "editor.parameterHints.enabled": false, // might be true if I need to autocomplete param but verbose
    "editor.wordBasedSuggestions": false, // might be true ??
    // editor indent
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 120,
    "editor.rulers": [
        120
    ],
    // editor misc
    "editor.minimap.enabled": false,
    "editor.bracketPairColorization.enabled": false,
    // explorer
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "explorer.autoReveal": false,
    "explorer.openEditors.visible": 0,
    // extentions
    "extensions.ignoreRecommendations": true,
    //files
    "files.autoSave": "onFocusChange",
    "files.insertFinalNewline": false, // handle by editorconfig
    "files.trimTrailingWhitespace": false, // handle by editorconfig
    // files watcher
    "files.watcherExclude": {
        "**/.idea/**": true,
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/vendor/**": true,
        "**/coverage/**": true
    },
    // git
    "git.untrackedChanges": "separate",
    // launch
    "launch": {
        "configurations": [
            {
                "name": "debug - node",
                "type": "node",
                "request": "launch",
                "program": "${file}",
                "timeout": 5000
            },
            {
                "name": "debug - python",
                "type": "python",
                "request": "launch",
                "program": "${file}",
                "timeout": 5000
            },
            {
                "name": "debug - deno",
                "type": "node",
                "port": 9229,
                "request": "launch",
                "cwd": "${workspaceFolder}",
                "runtimeExecutable": "deno",
                "runtimeArgs": [
                    "run",
                    "--inspect-brk",
                    "-A",
                    "${file}"
                ],
                "timeout": 5000
            },
            {
                "name": "debug:attach - js",
                "type": "node",
                "request": "attach",
                "port": 9229,
                "timeout": 5000
            },
            {
                "name": "debug - php",
                "type": "php",
                "request": "launch",
                "program": "${file}",
                "port": 9000
            }
        ]
    },
    // problems
    "problems.decorations.enabled": false,
    "problems.showCurrentInStatus": true,
    "problems.defaultViewMode": "table",
    // search
    "search.exclude": {
        "**/.idea": true,
        "**/node_modules": true,
        "**/vendor": true,
        "**/coverage": true,
        "**/dist": true
    },
    "search.useIgnoreFiles": true,
    // terminal
    // "terminal.integrated.defaultLocation": "editor", // editor convient pas forcement
    "terminal.integrated.defaultProfile.linux": "bash",
    "terminal.integrated.fontFamily": "Ubuntu Mono",
    "terminal.integrated.fontSize": 15,
    "terminal.integrated.lineHeight": 1.1,
    "terminal.integrated.letterSpacing": 1,
    "terminal.integrated.drawBoldTextInBrightColors": true, // false for solarized light
    // window
    "window.menuBarVisibility": "toggle",
    "window.newWindowDimensions": "inherit",
    "window.openFoldersInNewWindow": "on",
    "window.zoomLevel": 0.6,
    "window.title": "${appName}${separator}${rootName}",
    "window.titleBarStyle": "native",
    // workbench
    "workbench.colorTheme": "Monokai",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.startupEditor": "none",
    "workbench.settings.enableNaturalLanguageSearch": false,
    "workbench.view.alwaysShowHeaderActions": true,
    // workbench editor
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.pinnedTabSizing": "compact",
    "workbench.editor.tabCloseButton": "off",
    "workbench.editor.decorations.colors": true,
    // workbench editor preview
    "workbench.editor.enablePreview": true,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.enablePreviewFromCodeNavigation": false,
    // workbench tree
    "workbench.tree.indent": 20,
    "workbench.tree.renderIndentGuides": "always",
    "workbench.list.keyboardNavigation": "filter",
    // misc
    "telemetry.enableTelemetry": false,
    "emmet.showExpandedAbbreviation": "inMarkupAndStylesheetFilesOnly",
    // javascript
    "javascript.suggest.completeFunctionCalls": true,
    "javascript.updateImportsOnFileMove.enabled": "always",
    // typescript
    "typescript.suggest.completeFunctionCalls": true,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "typescript.reportStyleChecksAsWarnings": false,
    "typescript.tsserver.maxTsServerMemory": 2048,
    "typescript.tsdk": "node_modules/typescript/lib",
    "[typescript]": {
        "editor.formatOnSave": false
    },
    // Python
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.mypyEnabled": true,
    // PHP
    "php.suggest.basic": false, // PHP IntelliSense
    // markdown
    "[markdown]": {
        "editor.wordBasedSuggestions": true,
        "editor.quickSuggestions": true
    },
    // extensions
    "eslint.run": "onSave",
    "macros": {
        "comment": [
            "editor.action.commentLine",
            "cursorDown"
        ],
        "debugStop": [
            "workbench.action.debug.stop",
            "workbench.debug.viewlet.action.removeAllBreakpoints"
        ]
    },
    "material-icon-theme.hidesExplorerArrows": true,
    "material-icon-theme.showReloadMessage": false,
    "material-icon-theme.showUpdateMessage": false,
    "phpcs.standard": "PSR2",
    "remote.containers.defaultExtensions": [
        "EditorConfig.EditorConfig",
        "geddski.macros",
        "mikestead.dotenv",
        "PKief.material-icon-theme",
        "yatki.vscode-surround"
    ],
    // either use a project specific dotfiles or make a subset for vscode
    // "dotfiles.repository": "romainprignon/dotfiles",
    // "dotfiles.installCommand": "bash ./scripts/install.sh && bash ./scripts/configure.sh",
    "surround.custom": {
        "log": {
            "label": "log",
            "description": "console.log",
            "disabled": false,
            "snippet": "console.log($TM_SELECTED_TEXT)"
        }
    },
    "redhat.telemetry.enabled": false,
