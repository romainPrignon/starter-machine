alias ls="ls --color=auto"
alias ll="ls -ahlF"
alias dir="dir --color=auto"
alias grep="grep --color=auto"

# Easier navigation: .., ..., ...., ....., ~ and -
alias -- -="cd -"
alias ~="cd ~"
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# Shortcuts
alias app="cd ~/app"
alias bin="cd ~/bin"
alias dl="cd ~/Downloads"
alias w="cd ~/workspace"

# Other
alias h="history"
alias mkae="make"

# symfony
alias sf2="php app/console"
alias sf3="php bin/console"

# docker
alias dm="docker-machine"
alias dc="docker-compose"

# terraform
alias tf="terraform"

# scripts
alias standup="sh ~/scripts/git-standup.sh"
alias meteo="curl -4 wttr.in/Lyon"
alias dog="pygmentize -g"
alias mp3="ydl -x --audio-format mp3 --audio-quality 0"
alias mp4="ydl -f 22"

# git
alias git-hot-files="git log --pretty=format: --name-only | sort | uniq -c | sort -rg | head -10"
alias moji="gitmoji -c"

# Add an "alert" alias for long running commands.  Use like so:
#   sleep 10; alert
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'
